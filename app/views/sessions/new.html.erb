<h1>Login</h1>

<%= form_with url: sessions_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true, value: params[:email] %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, value: params[:password]  %>
  </div>

  <%= form.submit 'Log In' %>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>
