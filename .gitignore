# Ignore the default Rails log files
/log/*
!/log/.keep

# Ignore temp files
/tmp/*
!/tmp/.keep

# Ignore the database file (SQLite3)
db/*.sqlite3
db/*.sqlite3-journal

# Ignore compiled assets
/public/assets
/public/packs
/public/packs-test

# Ignore the node_modules folder (for Webpacker or JavaScript frameworks)
node_modules/

# Ignore Yarn integrity files
.yarn-integrity

# Ignore the byebug history file
.byebug_history

# Ignore environment variable files
/.env
/.env.*

# Ignore the default Rails secrets file
/config/secrets.yml

# Ignore the development and test database configuration files
/config/database.yml

# Ignore the credentials file (if using Rails 5.2+)
config/credentials.yml.enc
config/master.key

# Ignore the Rails server.pid and other runtime files
/tmp/pids
/tmp/sockets

# Ignore uploaded files in development (if using Active Storage)
storage/*
!/storage/.keep

# Ignore backup files created by text editors
*~
*.swp
*.swo

# Ignore IDE/editor-specific files
/.idea
/.vscode
*.iml

# Ignore Bundler config
/.bundle

# Ignore the vendor directory (generated by Bundler)
vendor/bundle

# Ignore the cache folder generated by Bundler
vendor/cache

# Ignore Gemfile.lock for specific environments (only for gems used in development/test)
Gemfile.lock

# Ignore test coverage reports
/coverage/

# Ignore the coverage directory from SimpleCov
coverage/

# Ignore all Mac system files
.DS_Store

# Ignore Windows system files
Thumbs.db
Desktop.ini

# Ignore the Spring application preloader (if used in development)
spring/

/app/assets/builds/*
!/app/assets/builds/.keep

/node_modules
